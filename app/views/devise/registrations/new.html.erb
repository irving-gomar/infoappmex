<div class="container-signup m-5 mx-auto text-black">
  <h2>Regístrate</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs m-3">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "correo eléctrónico" }%>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} caracteres mínimo" if @minimum_password_length),
                  input_html: { autocomplete: "contaseña nueva" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "contaseña nueva" } %>
      <%= f.input :role, collection: %w[ONG Voluntario Migrante] %>

    </div>

    <div class="form-actions">
      <%= f.button :submit, "Regístrate" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
