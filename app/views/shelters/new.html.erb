<div class="container main-box-form mt-6 shadow justify-content-center">
  <%= simple_form_for [@ong, @shelter] do |f| %>
    <%= f.input :name %>
    <%= f.input :description, as: :text %>
    <%= f.input :address %>
    <%= f.input :max_capacity %>
