<div class="container main-box mt-4 shadow justify-content-center">
    <div class="row">
      <div class="col-md-4">
        <div class="text-center" style="overflow: hidden; margin: auto">
          <%= image_tag(@ong.photo, class: "p-2", style: "width: 100%; height:100%; border-radius: 20px; object-fit:cover; aspect-ratio: 1/1")%>
        </div>
      </div>
      <div class="col-md-8">
        <div class="card-body p-3">
          <h2 class="card-title"><%= @ong.name %></h2>
          <p class="card-text">
            <strong>Description:</strong> <%= @ong.description %><br>
            <strong>Address:</strong> <%= @ong.address %><br>
          </p>

          <%= link_to edit_ong_path(@ong), class: 'btn btn-primary mr-2' do %>
            Edit
          <% end %>

          <!-- Delete link -->
          <%= link_to ong_path, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
            Delete
          <% end %>
          
          <%= link_to ongs_path, class: 'btn btn-info' do %>
            Back
          <% end %>
        </div>
      </div>
    <div class="row">
      <div>
        <h3 class="mt-4">Shelters</h3>
      </div>
      <div class="row">
        <% if @ong.shelters.empty? == false %>
          <% @ong.shelters.each do |shelter| %>
            <div class="col-md-4">
              <%= link_to shelter_path(shelter) do %>
                <div class="card mb-4 shadow-sm">
                  <div class="card-body">
                    <h5 class="card-title" style="text-decoration:none"><%= shelter.name %></h5>
                    <p class="card-text" style="text-decoration:none">
                      <strong>Direcci√≥n:</strong> <%= shelter.address %><br>
                      <strong>Capacidad:</strong> <%= shelter.max_capacity %><br>
                    </p>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>          
        <% end %>
        
        <div class="col-md-4">
          <%# create a first shelter %>
          <%= link_to 'Crear Refugio', new_ong_shelter_path(@ong), class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</div>
